.present-gallery
	background-color #7685FF
	display block


	&__overlay
		color #ffffff
		text-decoration none

	&__overlay
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		font-size 2em
		font-family sf
		width 100%
		border-radius 5%
		height 100%
		text-transform uppercase
		background-color rgba(0 0 0 .5)
		border-radius 5%
		text-align center
		padding-top 40%
		opacity 0
		transition all .5s

		&:hover
			transform rotate(360deg)
			opacity 1
			


	&__text
		white-space nowrap

	&__title
		font-family sf
		text-align center
		font-size 3em
		text-transform uppercase
		margin-bottom 20px

	&__content
		display flex
		flex-wrap wrap
		justify-content space-around
		max-width 60%
		margin 0 auto
	
	&__part
		display flex
		margin 20px
		justify-content center
		flex-direction column
		background blue
		width 35%
		transform skew(-10deg)
		padding-top 30%
		border-radius 5%
		box-shadow: -7px 5px 69px -15px rgba(0,0,0,0.67)
		position relative

		&:hover
			transform translateY(-10px)
			transition-duration .4s
			box-shadow -7px 25px 169px -15px rgba(0,0,0,0.67)


@media screen and (max-width 1569px)
	.present-gallery
		&__overlay
			font-size 1.6em


@media screen and (max-width 1075px)
	.present-gallery
		&__overlay
			font-size 1.5em


@media screen and (max-width 769px)
	.present-gallery
		&__overlay
			font-size 1.2em
@media screen and (max-width 553px)
	.present-gallery
		&__overlay
			font-size 1.1em
@media screen and (max-width 1226px)
	.present-gallery

		&__content
			max-width 70%

@media screen and (max-width 460px)
	.present-gallery
		&__overlay
			font-size .5em

@media screen and (max-width 935px)
	.present-gallery

		&__content
			max-width 90%

@media screen and (max-width 604px)
	.present-gallery

		&__content
			max-width 85%
		&__title
			font-size 2.2em