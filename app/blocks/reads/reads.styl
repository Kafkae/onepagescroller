.reads
	background-color #D6E069
	display flex
	flex-direction column
	position relative


	&__title
		font-family sf
		text-align center
		font-size 3em
		text-transform uppercase
	
	&__content
		margin 0 auto
		display flex
		flex-wrap wrap
		flex-direction row
		align-items center
		justify-content space-around
		min-height 600px

	&__wrap
		border-radius 50%
		display flex 
		flex-basis calc(37% - 50px)
		flex-direction column
		background-size cover
		justify-content space-around
		position relative
		box-shadow 0 0 25px 10px rgb(49, 162, 144), inset 43px -1088px 30px 62px rgb(49, 162, 144)
		padding 3%

	&__text
		font-size 1.8em
		line-height 1.4
		font-family mf
		text-align center

	&__link
		color mc
		text-decoration none
		text-transform uppercase
		font-family sf 
		font-size 2em
		position relative
		z-index 32
		margin-top 10px

		&_hover::before
			position absolute
			content ''
			width 0px
			height 30px
			background-color #AA2F52
			top -2px
			left 30px
			z-index -1
			transform translate(-50%)
			transition all 0.3s
			transform scale(0)

		&:hover::before
			width 90px
			transform scaleX(1)
			left -1px

		&_hover::after
			position absolute
			content ''
			width 68px
			height 30px
			background-color #AA6A3A
			top -2px
			left 89px
			z-index -1
			transform scale(0)
			transition all 0.3s

		&:hover::after
			transform scaleX(1)
			width 105px
			

@media screen and (max-width 780px)
	.reads
		
		&__content
			flex-direction column
		
		&__wrap
			margin-bottom 30px
			width 70%

		&__title
			font-size 2.2em
		&__text
			font-size 1.2em
			line-height 1.3

		&__link
			font-size 1.2em

			&_hover::before
				height 18px

			&:hover::before
				width 54px
				transform scaleX(1)
				left -1px
					
			&_hover::after
				height 18px

			&:hover::after
				transform scaleX(1)
				width 64px
				left 53px

@media screen and (max-width 370px)
	.reads
		
		&__title
			font-size 1.6em
		&__link
			font-size .8em

			&_hover::before
				height 15px

			&:hover::before
				width 41px
				transform scaleX(1)
				left -1px
					
			&_hover::after
				height 15px

			&:hover::after
				transform scaleX(1)
				width 48px
				left 40px
		&__content
			flex-direction column
			min-height 370px
		
		&__wrap
			margin-bottom 0px
		
		&__text
			font-size .9em